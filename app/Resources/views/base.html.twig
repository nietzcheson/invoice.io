<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
      {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
      {% endfor %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script charset="utf-8" src="{{ asset('bower_components/jquery/dist/jquery.min.js')}}"></script>
        <script charset="utf-8" src="{{ asset('js/funciones.js')}}"></script>

    </body>
</html>
